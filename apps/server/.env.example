# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Port
PORT=3000

# Omise
OMISE_PUBLIC_KEY=your-omise-public-key
OMISE_SECRET_KEY=your-omise-secret-key
OMISE_TEST_MODE=true

# LINE
LINE_CHANNEL_ACCESS_TOKEN=your-line-channel-token
LINE_CHANNEL_SECRET=your-line-channel-secret

# Google Maps
GOOGLE_MAPS_API_KEY=your-maps-api-key

# Redis (for Bull Queue)
REDIS_URL=redis://localhost:6379

# Node
NODE_ENV=development

# Email Configuration
# Option 1: Gmail (Recommended for development)
EMAIL_PROVIDER=gmail
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-16-digit-app-password
EMAIL_FROM=noreply@theblissathome.com

# Option 2: SendGrid (Recommended for production)
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# Option 3: SMTP (Custom email server)
# EMAIL_PROVIDER=smtp
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password

# Hotel App URL (for email links)
HOTEL_APP_URL=http://localhost:3006

# Admin API Security
ADMIN_API_TOKEN=admin-secret-token-2026
